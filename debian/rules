project?=iotjs

default: rule/debuild
	@echo "#$@: $^"


# Comment this to turn off verbose mode.
export DH_VERBOSE=1
export DEB_BUILD_MAINT_OPTIONS=hardening=+all

CMAKE_OPTIONS+=-DFEATURE_PROFILE=es5.1
os_type?=$(shell uname | tr '[A-Z]' '[a-z]' || echo "unknown")

debian_arch_type?=$(shell dpkg --print-architecture || echo "noarch")
ifeq (${debian_arch_type}, amd64)
arch_type?=x86_64
else
arch_type?=${debian_arch_type}
endif

CMAKE_OPTIONS+=-DPLATFORM_DESCRIPTOR="${arch_type}-${os_type}"
CMAKE_OPTIONS+=-DTARGET_ARCH="${arch_type}"
profile_file?=profiles/common.profile
CMAKE_OPTIONS+=-DIOTJS_PROFILE="${profile_file}"
export CMAKE_OPTIONS

version?=$(shell [ -r debian/changelog ] \
  && which dpkg-parsechangelog > /dev/null 2>&1 \
  && dpkg-parsechangelog | grep "Version:" | sed -e "s/Version: \(.*\)-.*/\1/g" \
  || echo "0.0")

tarball?=${CURDIR}/../${project}_${version}.orig.tar.gz
export tarball

prep_files+=deps/jerry/CMakeLists.txt
prep_files+=deps/jerry/jerry-core/profiles/.profile
prep_files+=deps/libtuv/cmake/config/config_${arch_type}-${os_type}.cmake
prep_files+=deps/libtuv/cmake/option/option_${arch_type}-${os_type}.cmake


%:
	dh $@

%.1: %.sgml
	docbook-to-man $< > $@

override_dh_auto_configure: rule/prep
	dh_auto_configure -- ${CMAKE_OPTIONS}

override_dh_installman: debian/${project}.1
	dh_installman

deps/%: debian/rules .gitmodules deps
	which git || ${<D}/${<F} rule/setup
	git submodule init
	git submodule update
	@ls -l $@

cmake/config/${arch_type}-${os_type}.cmake: cmake/config/noarch-${os_type}.cmake
	@ls $@ || ln -fs ${<F} $@

deps/libtuv/cmake/%.cmake: deps/libtuv/cmake
	@ls -l $@

deps/libtuv/cmake/config/config_${arch_type}-${os_type}.cmake: deps/libtuv/cmake/config/config_noarch-${os_type}.cmake
	@ls $@ || ln -fs ${<F} $@

deps/libtuv/cmake/option/option_${arch_type}-${os_type}.cmake: deps/libtuv/cmake/option/option_noarch-${os_type}.cmake
	@ls $@ || ln -fs ${<F} $@

deps/jerry/jerry-core/profiles/es5.1.profile: deps/jerry/jerry-core
	@ls -l $@

deps/jerry/jerry-core/profiles/.profile: deps/jerry/jerry-core/profiles/es5.1.profile
	ls $@ || ln -fs ${<F} $@
	@ls -l $@

${tarball}: rule/prep
	 tar cvfz "$@" \
--transform "s|^./|${package}-${version}/|" \
--exclude 'debian' --exclude-vcs \
.
	@ls -l $@

rule/tarball: ${tarball}
	@ls $^

rule/setup: /etc/debian_version
	sudo apt-get update -y
	sudo apt-get install -y \
  build-essential \
  debhelper \
  devscripts \
  fakeroot \
\
  cmake \
  git \
  python \
\
  docbook-to-man \
  libcurl4-gnutls-dev \
 #EOL

rule/version:
	@echo ${version}
	-cat /etc/os-release
	cmake --version
	${MAKE} --version
	${CC} --version

rule/prep: ${prep_files}
	@ls -l $^

rule/dist: rule/setup rule/version rule/prep rule/tarball
	@echo "# $@: $^"

rule/debuild: debian/rules
	@which ${@F} || ${<D}/${<F} ${@D}/setup
	@ls ${tarball} || ${<D}/${<F} ${@D}/tarball
	${<D}/${<F} ${@D}/version
	${@F} -S -us -uc
	${@F} -us -uc

.PHONY: rule/%
